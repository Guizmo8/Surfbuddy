<div class="video-background">
  <video autoplay loop muted playsinline>
    <source src="https://videos.pexels.com/video-files/4193127/4193127-uhd_2562_1440_24fps.mp4" type="video/mp4">
    Your browser does not support the video tag.
  </video>
</div>

<div class="container d-flex justify-content-center">
  <section class="mx-auto my-5" style="max-width: 23rem;">
      <div class="card-form m-0">
        <h3 class="font-weight-bold text-center text-uppercase text-white my-4"> Sign In</h3>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "pb-5 px-2" }) do |f| %>

          <div class="d-flex justify-content-start align-items-center mb-4">
            <i class="far fa-envelope fa-lg text-white fa-fw me-3 mt-3"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :email, required: false, input_html: { class: "form-control rounded-pill", autocomplete: "email" }, label_html: { class: "form-label" } %>
            </div>
          </div>
          <div class="d-flex justify-content-start align-items-center pb-3">
            <i class="fa-solid fa-lock fa-lg text-white fa-fw me-3 mt-3"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :password, required: false, hint: ("At least 8 characters and 1 digit" if @minimum_password_length), input_html: { class: "form-control rounded-pill", autocomplete: "new-password" }, label_html: { class: "form-label" } %>
            </div>
          </div>
          <div class="d-flex justify-content-center align-items-center pb-3">
            <%= f.button :submit, "Sign-in", class: "btn btn-outline-light btn-rounded btn-block my-4 z-depth-0" %>
          </div>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <% end %>
          <div class="d-flex justify-content-center align-items-center text-white">
            <h5>Don't have an account?</h5>
          </div>
          <div class="d-flex justify-content-center align-items-center pb-3">
            <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline-light btn-rounded btn-block my-4 z-depth-0" %>
          </div>
        </div>
         </div>
  </section>
</div>
