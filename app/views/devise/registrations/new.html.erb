<div class="container d-flex justify-content-center">
  <section class="mx-auto my-5" style="max-width: 23rem;">
    <div class="card-form m-0">
      <h3 class="font-weight-bold text-center text-uppercase text-white my-4">Sign up</h3>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "pb-5 px-2" }) do |f| %>
          <%= f.error_notification %>

          <div class="d-flex justify-content-start align-items-center mb-4">
            <i class="far fa-user fa-lg text-white fa-fw me-3 mt-3"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :first_name, required: true, autofocus: true, input_html: { class: "form-control", autocomplete: "first-name" }, label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-start align-items-center mb-4">
            <i class="far fa-hand-point-right fa-lg text-white fa-fw me-3 mt-3"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :last_name, required: true, input_html: { class: "form-control", autocomplete: "last-name" }, label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-start align-items-center mb-4">
            <i class="far fa-envelope fa-lg text-white fa-fw me-3 mt-3"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :email, required: true, input_html: { class: "form-control", autocomplete: "email" }, label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-start align-items-center pb-3">
            <i class="fa-solid fa-lock fa-lg text-white fa-fw me-3 mt-3 mb-4"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :password, required: true, hint: ("At least 8 characters and 1 digit" if @minimum_password_length), input_html: { class: "form-control", autocomplete: "new-password" }, label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-start align-items-center pb-3">
            <i class="fa-solid fa-lock fa-lg text-white fa-fw me-3 mt-3 mb-4"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :password_confirmation, required: true, hint: ("At least 8 characters and 1 digit" if @minimum_password_length), input_html: { class: "form-control", autocomplete: "new-password" }, label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-start align-items-center mb-4">
            <i class="fa-solid fa-phone fa-lg text-white fa-fw me-3 mt-3" style="color: #ffffff;"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :phone_number, required: true, autofocus: true, input_html: { class: "form-control", autocomplete: "current-phone-number" }, label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-center align-items-center pb-3">
            <h5 class="font-weight-bold text-white my-4">Surf Skill Assessment</h5>
          </div>

          <div class="mb-4">
            <h6 class="text-white">1. How confident are you in catching waves on your own?</h6>
            <%= f.input :confidence_level, as: :radio_buttons, collection: [['I struggle to catch waves without assistance.', 'A'], ['I can catch waves on my own but sometimes miss or mistime them.', 'B'], ['I consistently catch waves on my own, even in challenging conditions.', 'C']], item_wrapper_class: 'form-check' %>
          </div>

          <div class="mb-4">
            <h6 class="text-white">2. What size of waves are you comfortable surfing?</h6>
            <%= f.input :wave_size, as: :radio_buttons, collection: [['Small waves (1-3 feet)', 'A'], ['Medium waves (3-6 feet)', 'B'], ['Large waves (6+ feet)', 'C']], item_wrapper_class: 'form-check' %>
          </div>

          <div class="mb-4">
            <h6 class="text-white">3. How comfortable are you with performing turns and maneuvers on a wave?</h6>
            <%= f.input :maneuver_skill, as: :radio_buttons, collection: [['I\'m still learning to stand and ride straight.', 'A'], ['I can perform basic turns and maneuvers like cutbacks.', 'B'], ['I can link advanced maneuvers like carves, cutbacks, and aerials.', 'C']], item_wrapper_class: 'form-check' %>
          </div>

          <div class="mb-4">
            <h6 class="text-white">4. What type of surfboard do you usually ride?</h6>
            <%= f.input :board_type, as: :radio_buttons, collection: [['Soft-top longboard or foam board', 'A'], ['Funboard or a shorter board with more maneuverability', 'B'], ['High-performance shortboard', 'C']], item_wrapper_class: 'form-check' %>
          </div>

          <div class="mb-4">
            <h6 class="text-white">5. How familiar are you with reading the ocean conditions (e.g., wave direction, tides, wind)?</h6>
            <%= f.input :ocean_knowledge, as: :radio_buttons, collection: [['Iâ€™m still learning how to read waves and conditions.', 'A'], ['I can read waves and conditions well enough to position myself correctly.', 'B'], ['I have a strong understanding of ocean conditions and can adapt to different environments.', 'C']], item_wrapper_class: 'form-check' %>
          </div>

          <div class="d-flex justify-content-start align-items-center mb-4">
            <i class="fa-regular fa-bell fa-fw me-3 mt-3" style="color: #ffffff;"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :alert_start_time, required: false, autofocus: true, input_html: { class: "form-control", autocomplete: "alert-start" }, label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-start align-items-center mb-4">
            <i class="fa-regular fa-bell-slash fa-fw me-3 mt-3" style="color: #ffffff;"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :alert_end_time, required: false, autofocus: true, input_html: { class: "form-control", autocomplete: "alert-end" }, label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-center align-items-center pb-3">
            <%= f.button :submit, "Sign up", class: "btn btn-outline-warning btn-rounded btn-block my-4 z-depth-0" %>
          </div>

        <% end %>
    </div>
  </section>
</div>
