<div class="video-background">
  <video autoplay loop muted playsinline>
    <source src="https://videos.pexels.com/video-files/4193127/4193127-uhd_2562_1440_24fps.mp4" type="video/mp4">
    Your browser does not support the video tag.
  </video>
</div>

<div class="container d-flex justify-content-center">
  <section class="mx-auto my-5" style="max-width: 23rem;">
    <div class="card-form m-0">
      <h3 class="font-weight-bold text-center text-uppercase text-white my-4">Sign up</h3>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "pb-5 px-2" }) do |f| %>
          <%= f.error_notification %>

          <div class="d-flex justify-content-center align-items-center mb-4">
            <i class="far fa-user fa-lg text-white fa-fw me-3 mt-3"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :first_name,
                          required: true,
                          autofocus: true,

                          input_html: { class: "form-control rounded-pill", autocomplete: "first-name" },
                          label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-center align-items-center mb-4">
            <i class="far fa-user fa-lg text-white fa-fw me-3 mt-3"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :last_name,
                          required: true,

                          input_html: { class: "form-control rounded-pill", autocomplete: "last-name" },
                          label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-center align-items-center mb-4">
            <i class="far fa-envelope fa-lg text-white fa-fw me-3 mt-3"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :email,
                          required: true,

                          input_html: { class: "form-control rounded-pill", autocomplete: "email" },
                          label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-center align-items-center mb-4">
            <i class="fa-solid fa-lock fa-lg text-white fa-fw me-3 mt-3"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :password,
                          required: true,

                          input_html: { class: "form-control rounded-pill", autocomplete: "new-password" },
                          label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-center align-items-center mb-4">
            <i class="fa-solid fa-lock fa-lg text-white fa-fw me-3 mt-3"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :password_confirmation,
                          required: true,

                          input_html: { class: "form-control rounded-pill", autocomplete: "new-password" },
                          label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-center align-items-center mb-4">
            <i class="fa-solid fa-phone fa-lg text-white fa-fw me-3 mt-3" style="color: #ffffff;"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :phone_number,
                          required: true,

                          autofocus: true,
                          input_html: { class: "form-control rounded-pill", autocomplete: "current-phone-number" },
                          label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-center align-items-center">
            <h5 class="font-weight-bold text-white my-4">Prefered Alert Times</h5>
          </div>

          <div class="d-flex justify-content-center align-items-center">
            <i class="fa-regular fa-bell fa-fw text-white me-3 "></i>
            <%= f.input :alert_start_time,
                        label: false,
                        required: true,
                        input_html: {
                        class: "form-control rounded-pill mt-3" } %>
          </div>
          <div class="d-flex justify-content-center align-items-center">
            <i class="fa-regular fa-bell-slash fa-fw text-white me-3 "></i>
            <%= f.input :alert_end_time,
                        label: false,
                        required: true,
                        input_html: {
                        class: "form-control rounded-pill mt-3" } %>
          </div>


          <div class="d-flex justify-content-center align-items-center pb-3">
            <h5 class="font-weight-bold text-white my-4">Surf Skill Assessment</h5>
          </div>

          <div class="mb-4">
            <h6 class="text-white">1. How confident are you in catching waves on your own?</h6>
            <label for="" style="color:#eeeeee"><%= f.input :confidence_level,
                        label: "",
                        as: :radio_buttons,
                        collection: [['I struggle to catch waves without assistance.', 'A'], ['I can catch waves on my own but sometimes miss or mistime them.', 'B'], ['I consistently catch waves on my own, even in challenging conditions.', 'C']],
                        item_wrapper_class: 'form-check' %></label>
          </div>

          <div class="mb-4">
            <h6 class="text-white">2. What size of waves are you comfortable surfing?</h6>
            <label for="" style="color:#eeeeee"><%= f.input :wave_size,
                        as: :radio_buttons,
                        label: "",
                        collection: [['Small waves (1-3 feet)', 'A'], ['Medium waves (3-6 feet)', 'B'], ['Large waves (6+ feet)', 'C']],
                        item_wrapper_class: 'form-check' %></label>
          </div>

          <div class="mb-4">
            <h6 class="text-white">3. How comfortable are you with performing turns and maneuvers on a wave?</h6>
            <label for="" style="color:#eeeeee"><%= f.input :maneuver_skill,
                        as: :radio_buttons,
                        label: "",
                        collection: [['I\'m still learning to stand and ride straight.', 'A'], ['I can perform basic turns and maneuvers like cutbacks.', 'B'], ['I can link advanced maneuvers like carves, cutbacks, and aerials.', 'C']],
                        item_wrapper_class: 'form-check' %></label>
          </div>

          <div class="mb-4">
            <h6 class="text-white">4. What type of surfboard do you usually ride?</h6>
            <label for="" style="color:#eeeeee"><%= f.input :board_type,
                        as: :radio_buttons,
                        label: "",
                        collection: [['Soft-top longboard or foam board', 'A'], ['Funboard or a shorter board with more maneuverability', 'B'], ['High-performance shortboard', 'C']],
                        item_wrapper_class: 'form-check' %></label>
          </div>

          <div class="mb-4">
            <h6 class="text-white">5. How familiar are you with reading the ocean conditions (e.g., wave direction, tides, wind)?</h6>
            <label for="" style="color:#eeeeee"><%= f.input :ocean_knowledge,
                        as: :radio_buttons,
                        label: "",
                        collection: [['Iâ€™m still learning how to read waves and conditions.', 'A'], ['I can read waves and conditions well enough to position myself correctly.', 'B'], ['I have a strong understanding of ocean conditions and can adapt to different environments.', 'C']],
                        item_wrapper_class: 'form-check' %></label>
          </div>

          <div class="d-flex justify-content-between mt-4">
            <div class="form-actions">
              <%= f.button :submit, "Sign up", class: "btn btn-outline-light btn-rounded btn-block my-1" %>
            </div>
            <%= link_to "Back", :back, class: "btn btn-outline-light btn-rounded btn-block my-1" %>
          </div>

        <% end %>
    </div>
  </section>
</div>
