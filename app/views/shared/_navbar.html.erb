          <li><%= link_to "My spots", favourites_path, class: "dropdown-item" %></li>
          <li><a class="dropdown-item" href="#">Another action</a></li>
          <li><hr class="dropdown-divider"></li>
          <li><%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: 'dropdown-item' %></li>
        </ul>
      </div>

    </div>
  <% else %>
    <div class="d-flex align-items-center justify-content-between w-100">
      <%= image_tag "SurfBuddy_logo.png" %>
      <%= link_to "Sign in", new_user_session_path, class: "button" %>
    </div>
  <% end %>
</div>
