
<div class="d-flex align-items-center justify-content-between border z-3 py-3 px-1 sticky-top bg-white">
  <% if user_signed_in? %>
    <div class="d-flex align-items-center">
      <%= image_tag current_user.photo, class:"avatar"%>
      <div>
        <div class="mx-1" > Hi <%= current_user.first_name.capitalize %> üèÑüèª‚Äç‚ôÇÔ∏è </div>
        <span class="level"> <%= current_user.surf_level.capitalize %> </span>
      </div>
    </div>

    <div class="d-flex align-items-center">
      <div class="mx-4">
        <%= link_to root_path, style:"cursor: pointer; margin-bottom: 10px; font-size: 2em" do %>
          <i class="fa-solid fa-bell"></i>
        <% end %>
      </div>

      <div class="nav-item dropdown">
        <div class="nav-link" role="button" data-bs-toggle="dropdown" aria-expanded="false">
