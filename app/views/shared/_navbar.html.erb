<div class="navbar-surfbuddy d-flex align-items-center justify-content-between border">
  <% if current_user %>
    <div class="d-flex align-items-center">
      <%= image_tag current_user.photo, class:"avatar"%>
      <div>
        <div class="mx-1" > Hi <%= current_user.first_name.capitalize %> 🏄🏻‍♂️ </div>
        <span class="level"> <%= current_user.surf_level.capitalize %> </span>
      </div>
    </div>
  <% else %>
    <div></div>
  <% end %>

  <div class="d-flex align-items-center">
    <div class="mx-4">
      <%= link_to root_path, style:"cursor: pointer; margin-bottom: 10px; font-size: 2em" do %>
        <i class="fa-solid fa-bell"></i>
      <% end %>
    </div>

    <div class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fa-solid fa-water" style="background-color: white; padding: 10px; border-radius: 10px; font-size: 2em"></i>
      </a>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="#">Action</a></li>
        <li><a class="dropdown-item" href="#">Another action</a></li>
        <li><hr class="dropdown-divider"></li>
        <li><a class="dropdown-item" href="#">Something else here</a></li>
      </ul>
    </div>
  </div>
</div>
