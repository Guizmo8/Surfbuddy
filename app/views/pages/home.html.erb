 <div class="container">
  <%= render "shared/searchform" %>


<div class="card mt-3 mx-auto">
    <img src="<%= @surfspot.image_url %>" class="card-img-top custom-card-img" alt="<%= @surfspot.name %>'s photo">
    <div class="card-body">
        <p class= "m-0" style="color: #00808B; font-size: 0.875em"> 15 min ago </p>
        <h5 class="card-title mt-0"><%= @surfspot.name %></h5>
      <p class="card-text"><small class="text-body-secondary"><%= @surfspot.location[0] %><%= @surfspot.location[1..-1].downcase %></small></p>
    </div>
</div>

</div>
