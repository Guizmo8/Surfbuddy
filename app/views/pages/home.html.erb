 <div class="container">
  <%= render "shared/searchform" %>
</div>


  <div class="card mt-3 mx-auto" style="width: 18rem;">
      <img src="<%= @surfspot.image_url %>" class="card-img-top custom-card-img" alt="<%= @surfspot.name %>'s photo">

    <div class="card-body">
        <h5 class="card-title"><%= @surfspot.name %></h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item"><em><%= @surfspot.location %></em></li>
      <li class="list-group-item">Type of Spot</li>
      <li class="list-group-item">Type of sea floor</li>
      <li class="list-group-item">Level</li>
    </ul>
    <div class="card-body">
      <a href="#" class="button">Follow</a>
      <a href="#" class="button">Alert me</a>
    </div>
  </div>
