<%# the actual card %>
<div class="card mb-4 w-100"  type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasBottom<%= post.id %>" aria-controls="offcanvasBottom<%= post.id %>">
  <div class="card-body border-start border-4 p-1">
    <div class="d-flex justify-content-between align-items-center row">
      <div class="col-7 d-flex align-items-center">
        <%= image_tag post.surfspot.image_url, class:"spot-avatar mb-1 mt-1"%>
        <h5 class="card-title mb-1 mt-1 ms-2"><strong><%= post.surfspot.name %></strong></h5>
      </div>

      <div class="col-5">
        <p class="card-title mb-1 mt-1 ps-2 border-start border-4"><em>
          <%= if (Time.now - post.created_at) < 3600
                "#{((Time.now - post.created_at) / 60).to_i} minutes ago"
              elsif (Time.now - post.created_at) < 86400
                "#{((Time.now - post.created_at) / 3600).to_i} hours ago"
              else
                "#{((Time.now - post.created_at) / 86400).to_i} days ago"
              end %></em></p>
      </div>
    </div>
  </div>
</div>

<%# bottom offcanvas %>
<div class="offcanvas offcanvas-bottom offcanvas-size-xl" tabindex="-1" id="offcanvasBottom<%= post.id %>" aria-labelledby="offcanvasBottom<%= post.id %>Label">
  <div class="offcanvas-header mb-2 mt-0">
    <h5 class="offcanvas-title" id="offcanvasBottom<%= post.id %>Label"><%= post.created_at.strftime("%H:%M") %></h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body small">
    <div class="container">
      <div class="row mb-3 mt-3">
        <div class="col-12">
          <div class="card">
            <div class="card-body w-auto">
              <p class="card-title mb-0"><strong>Summary</strong></p>
              <p class="card-text">
                <%= post.content %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-6">
          <div class="card">
            <div class="card-body py-2 px-3">
              <%= render "posts/metric", title: "Ripple", metric: post.ripple, icon: "ripple.png" %>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="card">
            <div class="card-body py-2 px-3">
              <%= render "posts/metric", title: "Direction", metric: post.wave_direction, icon: "wavedirection.png" %>
            </div>
          </div>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-6">
          <div class="card">
            <div class="card-body py-2 px-3">
              <%= render "posts/metric", title: "Wave Period", metric: post.wave_period, icon: "waveperiod.png" %>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="card">
            <div class="card-body py-2 px-3">
              <%= render "posts/metric", title: "Sea Temperature", metric: post.sea_temperature, icon: "thermometer.png" %>
            </div>
          </div>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-6">
          <div class="card">
            <div class="card-body py-2 px-3">
              <%= render "posts/metric", title: "Wind Speed", metric: post.wind, icon: "windspeed.png" %>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="card">
           <div class="card-body py-2 px-3">
              <%= render "posts/metric", title: "Wind Direction", metric: post.wind_direction, icon: "winddirection.png" %>
            </div>
          </div>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-6">
          <div class="card">
            <div class="card-body py-2 px-3">
              <%= render "posts/metric", title: "Tide", metric: post.tide, icon: "tide.png" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
