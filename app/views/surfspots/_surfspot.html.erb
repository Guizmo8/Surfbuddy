<div class="card card-your-spots-home mt-3 mx-auto">
  <%= link_to surfspot_path(spot) do %>
    <img src="<%= spot.image_url %>" class="card-img-top custom-card-img" alt="<%= spot.name %>'s photo">
  <% end %>
  <%= link_to surfspot_path(spot) do %>
    <div class="card-body">
        <h5 class="card-title"><%= spot.name %></h5>
      <p class="card-text"><small class="text-body-secondary"><%= spot.location[0] %><%= spot.location[1..-1].downcase %></small></p>
    </div>
  <% end %>
</div>
